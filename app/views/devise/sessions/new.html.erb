
<div class="fondo-1">
  <div class="container py-5">
      <div class="row col-12 justify-content-center">
        <div class="card-bienvenido card-general">
          <div class="text-center text-with-margin  ">
            <div>
              <h2 class="mb-2 mt-3" style="color: #E58524; font-family: MuseoModerno;">CUPONERAS DE DESCUENTO</h2>
              <h2 class="mt-2 font-mont" style="font-family: MuseoModerno;">EXPERTOS EN CUIDADO ORAL</h2>
            </div>
            <div class="mx-auto mt-5">
              <div >
                <%= image_tag "Marcas/Group 33.png", style:"width: 500px" %>
              </div>
            </div>
            <div class="m-5">
               <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%#= f.input :username, label: 'nombre de usuario',
                              required: false,
                              autofocus: true,
                  input_html: { autocomplete: "username" }%>
                   <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
                  <%= f.input :password, label: 'contraseña',
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, label: 'recordar contraseña', as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Entrar", class: "btn-ghost"  %>

                </div>
              <% end %>
            </div>
            <div class="my-2 mt-5">

              <%= link_to "Registrarme", new_user_registration_path, class: "green-text" %><br>
              <%= link_to "Olvíde mi contraseña", new_user_registration_path, class: "green-text" %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>




