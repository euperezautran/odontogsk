<div style="background-color: #333333;   height: 200vh;">
  <div class="container py-5 ">

    <div class="row">

      <div class="col-sm-12 col-md-3 col-lg-3 ">
        <%= render 'users/partials/columna_izq' %>
      </div>

      <div class="col-sm-12 col-md-9 col-lg-9">
        <div class="card-general card-marcas">
          <div class="d-flex justify-content-center mb-5">
            <%= image_tag "stepper_1.png" %>
          </div>
          <div class="mb-5">
            <h2 class="text-center mb-5">Elija una marca</h2>
          </div>
          <div class="d-flex mt-5" style=" margin-top: 150px!important" >
            <% @brands.each do |brand| %>
              <div class="mr-3 d-flex justify-content-center align-items-center card-general card-tamano-logo ">
                <span class="mx-4">
                  <%= link_to "#{image_tag brand.name, size: "150x100"}".html_safe, brand_path(brand.id), class: "img-fit"%>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
